
<script src="~/Scripts/Chart.min.js"></script>

<div class="card-block">
    <div class="row p-1">
        <span id="load1" class="fa fa-spin fa-spinner fa-2x" style="margin-left:20px;"></span>
        <canvas height=320 id="myChart2" style="padding: 0;margin: auto;display: block; "> </canvas>
    </div>
</div>

<script>
    $.ajax({
        type: "POST",
        url: "/Employee/GenderSplitChart",
        contentType: "application/json; charset=utf-8",
        dataType: "json",
        success: function (chData) {
        var aData = chData;
        var aLabels = aData[0]
        var aDatasets1 = aData[1]

        var dataT = {
            labels: aLabels,
            datasets: [{
                label: "Gender",
                data: aDatasets1,
                fill: true,
                backgroundColor: ["rgba(54, 162, 235, 0.7)",
                    "rgba(255, 99, 132, 0.7)"],
                borderColor: ["rgb(54, 162, 235)",
                    "rgb(255, 99, 132)"],
                borderWidth: 1
                }]
            };
        var ctx = $("#myChart2").get(0).getContext("2d");

        var myNewChart = new Chart(ctx, {
            type: 'doughnut',
            data: dataT,
            options: {
                responsive: false,
                title: { display: true, text: 'Employee Gender Split', fontSize: 12, padding: 10, fontColor:'#fd7e14' },
                "animation": {
                    "duration": 1,
                    "onComplete": function () {
                        var chartInstance = this.chart,
                          ctx = chartInstance.ctx;

                        ctx.font = Chart.helpers.fontString(Chart.defaults.global.defaultFontSize, Chart.defaults.global.defaultFontStyle, Chart.defaults.global.defaultFontFamily);
                        ctx.textAlign = 'center';
                        ctx.textBaseline = 'bottom';
                    }
                },
                legend: { display: true, position: 'bottom' },
                scales: {
                xAxes: [{ gridLines: { display: false }, display: false, scaleLabel: { display: false, labelString: '' }}],
                yAxes: [{ gridLines: { display: false }, display: false, scaleLabel: { display: false, labelString: '' }}]
            },
        }
        });
        $('#load1').hide();
    }
});
</script>



