@using WebPayroll.Helper
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="~/Scripts/jtable/jquery.jtable.js"></script>
    <link href="~/Scripts/jtable/themes/lightcolor/gray/jtable.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.validationEngine-en.js"></script>
    <script src="~/Scripts/jquery.validationEngine.js"></script>
    <link href="~/Content/validationEngine.jquery.css" rel="stylesheet" />
    <link href="~/Content/CustomStyle.css" rel="stylesheet" />
    <script src="~/Scripts/MyFunction.js"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Web Payroll", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.MyActionLink("<span class='fa fa-home fa-1x'> Home</span>", "Home", "Index", "Home", new { area = "" }, new { @class = "btn btn-link btn-sm" })</li>
                    <li>@Html.MyActionLink("<span class='fa fa-calendar fa-1x'> LMS</span>", "Leave Management", "Index", "Home", new { area = "LMS" }, new { @class = "btn btn-link btn-sm" })</li>
                    <li>@Html.Partial("_LoginPartial")</li>
                </ul>
            </div>
            
        </div>
    </div>
    <div class="container body-content nolrpad">
        @RenderBody()
    </div>

</body>
</html>
